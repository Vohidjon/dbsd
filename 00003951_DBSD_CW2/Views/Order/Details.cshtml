@model _00003951_DBSD_CW2.Models.FlowerOrder

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Flower Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Created At
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>

        <dt>
            DeliveryAddress
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DeliveryAddress)
        </dd>

        <dt>
            Delivery Phone
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DeliveryPhone)
        </dd>

        
        <dt>
            Order Status
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProcessStatusText)
        </dd>

    </dl>
</div>
<h4>Flowers Purchased</h4>
<table class="table">
    <tr>
        <th>
            Image
        </th>
        <th>
            Flower
        </th>
        <th>
            Quantity
        </th>
        <th>
            Price
        </th>
    </tr>

    @foreach (var item in Model.OrderItems)
    {
        <tr>
            <td>
                <img style="height: 80px" src="~/Content/flowers/@item.Flower.ImgUrl" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flower.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>@item.Flower.Price $</td>
        </tr>
    }
</table>
<p>
     @Html.ActionLink("Back to List", "Index")
</p>
