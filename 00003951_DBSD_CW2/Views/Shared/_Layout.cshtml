<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Flowers</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Flowers", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Categories", "Index", "Category")</li>
                    <li>@Html.ActionLink("All Flowers", "Index", "Flower")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("My Orders", "Index", "Order")</li>
                        <li>@Html.ActionLink("Report", "Report", "Vacancy")</li>
                    }
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="navbar-right">
                        <ul class="nav navbar-nav">
                            <li><a>@User.Identity.Name</a></li>
                            <li>@Html.ActionLink("Log Out", "LogOut", "Login", null, new { @class = "btn btn-success" })</li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="navbar-right">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Log in", "Index", "Login", null, new { @class = "btn btn-success" })</li>
                            <li>@Html.ActionLink("Register", "Register", "Login", null, new { @class = "btn btn-info" })</li>
                        </ul>
                    </div>
                }

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Flowers</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
